-- Create the 'users' table to store basic user information
CREATE TABLE users (
  id INT PRIMARY KEY AUTO_INCREMENT,
  name VARCHAR(50) NOT NULL,
  email VARCHAR(100) NOT NULL,
  password VARCHAR(100) NOT NULL
);

-- Insert two users into the 'users' table
INSERT INTO users (name, email, password)
VALUES ('John Doe', 'john@example.com', 'hashed_password_1');

INSERT INTO users (name, email, password)
VALUES ('Jane Smith', 'jane@example.com', 'hashed_password_2');

-- Create the 'user_details' table to store additional details for each user
CREATE TABLE user_details (
  id INT PRIMARY KEY AUTO_INCREMENT,
  user_id INT NOT NULL,
  balance DECIMAL(10, 2) NOT NULL,
  additional_info VARCHAR(255),
  FOREIGN KEY (user_id) REFERENCES users(id)
);

-- Insert data for user 1 in the 'user_details' table
INSERT INTO user_details (user_id, balance, additional_info)
VALUES (1, 500.00, 'Additional information for John Doe.');

-- Insert data for user 2 in the 'user_details' table
INSERT INTO user_details (user_id, balance, additional_info)
VALUES (2, 1000.00, 'Some details for Jane Smith.');
